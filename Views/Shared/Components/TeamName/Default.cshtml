@model IEnumerable<Teams>

<div class="list-group">
    @foreach (Teams x in Model)
    {
        <a class="list-group-item list-group-item-action" asp-action="Index" asp-controller="Home" asp-route-team="@x.TeamId" asp-route-teamname="@x.TeamName">@x.TeamName</a>
    }
    <a class="list-group-item list-group-item-action bg-danger text-light" asp-action="Index" asp-controller="Home" asp-route-team="" asp-route-teamname="">Clear Filter</a>
</div>
